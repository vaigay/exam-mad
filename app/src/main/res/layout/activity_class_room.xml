<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassRoomActivity">

    <TextView
        android:id="@+id/class_name_tv"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:text="Tên lớp"
        android:textSize="20dp"></TextView>

    <EditText
        android:id="@+id/class_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@+id/class_name_tv"></EditText>

    <TextView
        android:id="@+id/class_des_tv"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/class_name_tv"

        android:layout_marginTop="14dp"
        android:text="Mô tả"
        android:textSize="20dp"></TextView>

    <EditText
        android:id="@+id/class_des"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/class_name_tv"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@+id/class_des_tv"></EditText>



    <Button
        android:id="@+id/add_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/class_des_tv"
        android:layout_marginTop="10dp"
        android:text="Thêm Lớp học"></Button>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_class"
        android:layout_below="@id/add_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>